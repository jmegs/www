<svg id="texture" width="100%" height="100%">
	<filter id="noise">
		<feTurbulence
			type="fractalNoise"
			baseFrequency=".8"
			numOctaves="4"
			stitchTiles="stitch"></feTurbulence>
		<feColorMatrix type="saturate" values="0"></feColorMatrix>
	</filter>
	<rect width="100%" height="100%" filter="url(#noise)"></rect>
</svg>

<style>
	#texture {
		position: fixed;
		inset: 0;
		z-index: 9999;
		width: 100vw;
		min-height: 100vh;
		opacity: 0.3;
		pointer-events: none;
		transform: translateY(0);
		filter: contrast(64%) brightness(100%);
	}
</style>
